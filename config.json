{
    "name": "Sequence_clf",
    "n_gpu": 1,

    "arch": {
        "type": "SeqModel",
        "args": {
            "input_size": 4,
            "hidden_size": 128,
            "num_layers": 1,
            "num_classes": 2,
            "batch_first": true,
            "bidirectional": true
        }
    },
    "data_loader": {
        "type": "SeqDataLoader",
        "args": {
            "seq_data": {
                "0": "../datasets/new_rRNA_2018.fa",
                "1": "../datasets/new_mRNA.cds.fa"
            },
            "min_seq_len": 100,
            "batch_size": 3072,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "recall", "accuracy", "precision", "F1", "mcc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 20,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}